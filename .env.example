# ============================================================================
# PALENTIR OSINT - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: OpenAI API key is REQUIRED for CAMEL-AI framework to function.
# All other API keys are OPTIONAL - toolkits will be disabled if keys are missing.
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Palentir OSINT
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
API_CORS_CREDENTIALS=true
API_CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
API_CORS_HEADERS=["*"]

# ============================================================================
# Streamlit Configuration
# ============================================================================
STREAMLIT_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_SERVER_RUNONCLIENT=true
STREAMLIT_CLIENT_SHOW_ERROR_DETAILS=true

# ============================================================================
# LLM Configuration - REQUIRED
# ============================================================================
# OpenAI API Key is REQUIRED - CAMEL-AI framework depends on it
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# CAMEL-AI Model Configuration
# Default: gpt-5 (most efficient and powerful)
# Options: gpt-5, gpt-5-mini, gpt-5-nano, gpt-4-turbo, gpt-4, gpt-3.5-turbo
CAMEL_MODEL_PLATFORM=openai
CAMEL_MODEL_TYPE=gpt-5

# Legacy LLM Configuration (for backward compatibility)
LLM_MODEL=gpt-5
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# ============================================================================
# Database Configuration
# ============================================================================

# Neo4j - Graph Database
# Auto-detects localhost vs docker based on environment
NEO4J_URI=bolt://localhost:7687
NEO4J_HOST=
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password
NEO4J_DATABASE=osint

# PostgreSQL (if used)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=palentir_osint
DATABASE_URL=postgresql://osint_user:your-secure-password@localhost:5432/palentir_osint

# Redis - Cache & Task Queue
# Auto-detects localhost vs docker based on environment
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Qdrant Vector Store
# Auto-detects localhost vs docker based on environment
QDRANT_HOST=
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=osint_documents

# ============================================================================
# Docker Configuration
# ============================================================================
# Set DOCKER_ENV=true if running inside Docker container
# Or set USE_DOCKER_SERVICES=true to force using Docker service names
DOCKER_ENV=false
USE_DOCKER_SERVICES=
DOCKER_NETWORK=palentir-osint-network
DOCKER_COMPOSE_PROJECT_NAME=palentir-osint

# ============================================================================
# OSINT Tools API Keys - ALL OPTIONAL
# ============================================================================
# These toolkits will be automatically disabled if API keys are missing.
# You'll see warning messages in logs indicating which toolkits are unavailable.
# In production, configure all required toolkits for full functionality.

# Censys - Network Intelligence (OPTIONAL)
# Get API credentials from: https://search.censys.io/account/api
CENSYS_API_ID=
CENSYS_API_SECRET=

# Liferaft - Data Breach Intelligence (OPTIONAL)
# Get API key from: https://liferaft.io/
LIFERAFT_API_KEY=

# Maltego - Domain Intelligence (OPTIONAL)
# Get API key from: https://www.maltego.com/
MALTEGO_API_KEY=

# Social Links - Social Media Intelligence (OPTIONAL)
# Get API key from: https://sociallinks.io/
SOCIALLINKS_API_KEY=

# Shodan - Network Intelligence (OPTIONAL)
# Get API key from: https://account.shodan.io/
SHODAN_API_KEY=

# Google Custom Search (OPTIONAL)
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Twitter/X API (OPTIONAL)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# LinkedIn (OPTIONAL - if using unofficial API)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# GitHub API (OPTIONAL)
GITHUB_API_KEY=

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVERS_CONFIG_PATH=./config/mcp_servers.json
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
OAUTH_ENABLED=false
OAUTH_PROVIDER=google
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URL=http://localhost:8000/auth/callback

# ============================================================================
# Workforce Configuration
# ============================================================================
WORKFORCE_MAX_WORKERS=10
WORKFORCE_TIMEOUT=300
WORKFORCE_SHARE_MEMORY=true
WORKFORCE_MEMORY_SYNC_INTERVAL=30

# ============================================================================
# Task Configuration
# ============================================================================
TASK_QUEUE_MAX_SIZE=1000
TASK_TIMEOUT=600
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=5

# ============================================================================
# Memory Configuration
# ============================================================================
MEMORY_TYPE=hybrid  # Options: memory, vector, hybrid
MEMORY_MAX_TOKENS=8000
MEMORY_SUMMARIZATION_THRESHOLD=5000
MEMORY_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================================================
# Graph Configuration
# ============================================================================
GRAPH_MAX_DEPTH=5
GRAPH_MAX_NODES=10000
GRAPH_VISUALIZATION_LIMIT=500

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_FORMAT=json  # Options: json, text
LOG_FILE=logs/palentir.log
LOG_FILE_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5

# ============================================================================
# Development Configuration
# ============================================================================
DEVELOPMENT_MODE=true
MOCK_EXTERNAL_APIS=false
SEED_TEST_DATA=true

# ============================================================================
# Monitoring & Metrics
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_EXPORT_INTERVAL=60

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_RAG_QA=true
ENABLE_GRAPH_VISUALIZATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PARALLEL_AGENTS=true
ENABLE_MEMORY_SHARING=true
